<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".activity_pscpa">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Philippine Society for the"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Prevention of Cruelty to"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Animals"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:text="Prevention of Cruelty to Animals"
        android:textSize="30sp"
        app:srcCompat="@drawable/pscpabutton" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPSPGall"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Today, the Society is headed by Mr. Edgardo C. Aldaba with an energetic board whose main concern is to create, through information and education, a nationwide acceptance of kindness and consideration towards all animals."
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnPSPGall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPspMap"
        android:layout_centerHorizontal="true"
        android:onClick="processGallery"
        android:text="View Gallery" />

    <Button
        android:id="@+id/btnPspMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:onClick="processMap"
        android:text="View Map" />

    <Button
        android:id="@+id/btnPspWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPspMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-107dp"
        android:onClick="onWeb"
        android:text="Go to Website" />

    <Button
        android:id="@+id/btnPscBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPspWeb"
        android:layout_centerHorizontal="true"
        android:onClick="back"
        android:text="Back to Menu Page" />

</RelativeLayout>